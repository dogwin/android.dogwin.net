<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:id="@+id/musicListLayout"
	android:orientation="horizontal" android:layout_height="wrap_content"
	>
	<TextView android:id="@+id/songNum" android:layout_height="wrap_content"
		android:layout_width="40sp" android:text="100" android:gravity="center"
		android:layout_gravity="left" 
		android:textSize="15sp"></TextView>
	<TextView android:id="@+id/songName" android:layout_height="wrap_content"
		android:layout_width="match_parent" android:text="TextView"
		android:layout_weight="1" android:gravity="left" 
		android:textSize="15sp" android:singleLine="true"></TextView>
	<TextView android:id="@+id/songTime" android:layout_height="wrap_content"
		android:layout_width="40sp" android:text="00:00"
		android:layout_gravity="right" 
		android:textSize="15sp"></TextView>

</LinearLayout>
